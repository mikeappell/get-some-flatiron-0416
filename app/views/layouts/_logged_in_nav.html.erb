<div class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- <a class="navbar-brand" href="#">Get Some</a> -->
      <span style="padding-right: 15px;"><%= image_tag "logo.jpeg", width: '150', height: '50'%></span>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav nav-pills">
        <li role="presentation" class="active"><%= link_to "Orders", @current_user%></li>
        <li role="presentation"><%= link_to "Organizations", manage_organizations_path(@current_user.username) %></li>
        <li role="presentation"></li>
        <ul class="nav nav-tabs pull-right">
          <li role="presentation"><%= collection_select(:user, :organization_ids, @current_user.organizations, :id, :domain_name, {class: "selectpicker show-menu-arrow", selected: session[:current_org] }) %></li>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
               <%= @current_user.name%> <span class="caret"></span></a>

            <ul class="dropdown-menu">
                <li><%= link_to "Settings", user_settings_path(@current_user.username) %></li>
                <% if session[:user_id] %>
                  <li><%= link_to "Logout", logout_path, method: "delete" %></li>
                <% else %>
                  <li><%= link_to "Login", login_path %></li>
                <% end %>
            </ul>
          </li>
        </ul>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
