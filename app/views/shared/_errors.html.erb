<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>

<% if @user.errors.any? %>
  <div>
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
